<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivitySecond">

    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="277dp"
        android:layout_height="320dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/fill_polygon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="10dp"
                android:text="Polygon Color"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seek_red"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                android:max="255"
                android:progressTint="#FF0000"
                android:thumbTint="#FF0000" />

            <SeekBar
                android:id="@+id/seek_green"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                android:max="255"
                android:progressTint="#00FF00"
                android:thumbTint="#00FF00" />

            <SeekBar
                android:id="@+id/seek_blue"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                android:max="255"
                android:progressTint="#0000FF"
                android:thumbTint="#0000FF" />

            <LinearLayout
                android:layout_width="228dp"
                android:layout_height="128dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="2">

                <Button
                    android:id="@+id/bt_draw_polygon"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.0"
                    android:text="@string/bt_draw" />

                <Button
                    android:id="@+id/bt_draw_polyline"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="0.5"
                    android:text="@string/bt_clear" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>